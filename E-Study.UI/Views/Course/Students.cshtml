@model IEnumerable<E_Study.Core.Models.User>;

<h2>Students in Course</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Student ID</th>
                <th>Name</th>
                <!-- Add more columns if needed -->
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.UserName</td>
                    <!-- Add more columns if needed -->
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No students found for this course.</p>
}
