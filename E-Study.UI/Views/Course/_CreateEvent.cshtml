@model E_Study.Core.Models.Event

@{
}
<div class="mt-2">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary mb-4" data-bs-toggle="modal" data-bs-target="#modalCenter">
        <span class="tf-icons bx bx-edit me-1"></span>Create new event
    </button>
    <!-- Modal -->
    <div class="modal fade" id="modalCenter" tabindex="-1" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalCenterTitle">Create an event</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-action="CreateEvent" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="form-group col mb-3">
                                <div class="form-group mb-3">
                                    <label for="EventType">Event Type</label>
                                    <select class="form-control" id="EventType" name="EventType" required>
                                        <option value="">Select Event Type</option>
                                        <option value="File">File</option>
                                        <option value="Meeting">Meeting Url</option>
                                        <option value="Notification">Notification</option>
                                        <!-- Add more options as needed -->
                                    </select>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Text" class="control-label"></label>
                                    <input asp-for="Text" class="form-control"/>
                                    <span asp-validation-for="Text" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="Url" class="control-label">Meeting URL (Optional)</label>
                                    <input asp-for="Url" class="form-control"/>
                                    <span asp-validation-for="Url" class="text-danger"></span>
                                </div>                             
                                <div class="form-group mb-3">
                                    <label asp-for="StartDate">Start Date (Optional)</label>
                                    <input type="datetime-local" class="form-control" id="StartDate" name="StartDate">
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="EndDate">End Date (Optional)</label>
                                    <input type="datetime-local" class="form-control" id="EndDate" name="EndDate">
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="File">Upload File</label>
                                    <input type="file" class="form-control" id="File" name="File">
                                </div>
                                <input type="hidden" name="courseId" value="@ViewBag.CurrentCourseId" />                                
                            </div>
                        </div>                                         
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Finish</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
