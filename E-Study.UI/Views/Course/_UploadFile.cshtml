@model E_Study.Core.Models.Event

@{
}
<div class="mt-2">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary mb-4" data-bs-toggle="modal" data-bs-target="#modalCenter">
        <span class="tf-icons bx bx-upload me-1"></span>Upload
    </button>
    <!-- Modal -->
    <div class="modal fade" id="modalCenter" tabindex="-1" style="display: none;" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalCenterTitle">Upload a new file</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>               
                <form asp-action="UploadFile" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="modal-body">
                            <div class="form-group mb-3">
                                @* <div class="form-group">
                                    <label asp-for="FileName" class="control-label">File Name</label>
                                    <input asp-for="FileName" class="form-control" placeholder="Enter your file name"/>
                                    <span asp-validation-for="FileName" class="text-danger"></span>
                                </div> *@
                                <div class="form-group">
                                    <label asp-for="File">Upload File</label>
                                    <input type="file" class="form-control" id="File" name="File">
                                </div>
                                <input type="hidden" name="courseId" value="@ViewBag.CurrentCourseId" />
                            </div>
                        </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-label-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Finish</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="../../assets/vendor/libs/dropzone/dropzone.js"></script>
    <script src="../../assets/js/forms-file-upload.js"></script>
}
